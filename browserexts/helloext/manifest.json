{
  "manifest_version": 2,
  "name": "helloext",
  "version": "1.0",

	//optional
  "description": "Hello BrowserExtensions.",
  //"homepage_url": "https://github.com/roadt/nodeway/browserexts/helloext",

  "icons": {
//    "16": "icons/16x16.png",
//    "48": "icons/48x48.png",
//    "96": "icons/96x96.png",
    "128": "icons/128x128.png"
  },
  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/128x128.png",
    "default_title": "Hello Ext!",
    "default_popup": "popup/hello-ext.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["js/hello-ext.js"]
    }
  ],

  "web_accessible_resources": [
    "images/*.jpg"
  ]

}
